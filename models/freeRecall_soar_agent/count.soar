sp {elaborate*phase_connections
(state <s> ^type state
			^name codeNames
			^role clue_giver
			-^phase load_cards
			-^phase remove
			^board <board>
			^clue <clue>)

-(<clue> ^stripped <asdf>)
-->
(<s> ^phase connections)
}

 sp {propose*operator*add_connection
(state <s> ^type state
			^name codeNames
			#^phase connections
			^role clue_giver
			^clue <clue>
			^branch <branch>)
(<clue> ^element <lti_clue1>)	
(<clue> ^word <word_p>)
(<branch> ^element <lti>
		-^neg <neg>)
(<lti> ^assoc { @ <lti_clue1> <lti_clue2>} 
		^word <word>)
(<clue> ^connections <con>)
(<con> -^word <word>)
-->
(<s> ^operator <o> + > =)
(<o> ^name add_connection ^con <con> ^clue <clue> ^word <word> ^lti <lti>)
(write |proposing connection from RAT cue | <word> | to | <word_p> |. |)
}

 sp {propose*operator*add_connection_otherway
(state <s> ^type state
			^name codeNames
			#^phase connections
			^role clue_giver
			^clue <clue>
			^branch <branch>)
(<clue> ^element <clue_lti>)	
(<clue_lti> ^assoc { @ <lti> <lti_clue1>})
(<clue> ^word <word_p>)
(<branch> ^element <lti>
		-^neg <neg>)
(<lti> 	^word <word>)
(<clue> ^connections <con>)
(<con> -^word <word>)
-->
(<s> ^operator <o> + > =)
(<o> ^name add_connection ^con <con> ^clue <clue> ^word <word> ^lti <lti>)
(write |proposing connection from guess | <word_p> | to | <word> |. |)
}

sp {apply*operator*add_connection_first
(state <s> ^type state
			#^phase connections
			^name codeNames
			^role clue_giver
			^operator <o>
			^clue <clue>
			#^attempts <att>
			^branch <branch>)
(<clue> ^element <lti_clue1>)	
(<branch> ^element <lti>)

	(<lti>	^word <word>)
(<clue> ^connections <con> ^word <word_p> -^num_assoc <any>)
(<con> -^word <word>)
(<o> ^name add_connection ^con <con> ^clue <clue> ^word <word> ^lti <lti>)
-->
(<con> ^word <word>)
(<clue> ^flag connects ^num_assoc 1)
(<s> 	^prohibit <lti_clue1>)
(write |Connected guess | <word_p> | to RAT prompt | <word> |.|)
}

sp {apply*operator*add_connection
(state <s> ^type state
			#^phase connections
			^name codeNames
			^role clue_giver
			^operator <o>
			^clue <clue>
			#^attempts <att>
			^branch <branch>)
(<clue> ^element <lti_clue1> ^num_assoc <some>)	
(<branch> ^element <lti>)

	(<lti>	^word <word>)
(<clue> ^connections <con> ^word <word_p>)
(<con> -^word <word>)
(<o> ^name add_connection ^con <con> ^clue <clue> ^word <word> ^lti <lti>)
-->
(<con> ^word <word>)
(<clue> ^flag connects ^num_assoc ( + <some> 1) ^num_assoc <some> -)
(<s> 	^prohibit <lti_clue1>)
(write |Connected guess | <word_p> | to RAT prompt | <word> |.|)
}
 

 sp {propose*operator*no_connections
(state <s> ^type state
			^name codeNames
			^phase connections
			^role clue_giver
			^clue <clue>
			^branch <branch>)
(<clue> ^connections <con>)
(<con> -^word <word>)
-->
(<s> ^operator <o> + =)
(<o> ^name no_connection)
}

sp {apply*operator*no_connection
(state <s> ^type state
			^phase connections
			^name codeNames
			^role clue_giver
			^operator <o>
			^clue <clue>
			^max-attempts <max_att>
			^attempts <att>
			^branch <branch>)
(<clue> ^element <lti_clue1>)	
(<o> ^name no_connection)
-->
(<clue> ^flag connects)
(<s> 	^prohibit <lti_clue1>)
}

sp {prefrence*select_connect_over_results
(state <s> ^type state
			^name codeNames
			^role clue_giver
			^operator <o1> +
			^operator <o2> +)
(<o2> ^name result)
(<o1> ^name add_connection)
-->
(<s> ^operator <o1> > <o2>)
}

