sp {elaborate*query_clue_phase
(state <s> ^type state
			^name codeNames
			^role clue_giver
			-^phase load_cards
			-^phase connections
            -^phase remove
			^board <board>)
-(<s> ^clue <clue>)
-->
(<s> ^phase query_clue)
}

sp {elaborate*query_clue_phase_back
(state <s> ^type state
			^name codeNames
			^role clue_giver
			^branch <branch>
			^clue <clue>
			-^phase load_cards
            -^phase remove
			-^phase connections)
-->
(<s> ^phase query_clue)}

sp {elaborate*query_clue_phase_back_2
(state <s> ^type state
			^name codeNames
			^role clue_giver
			^branch <branch>
			^clue <clue>
			-^phase load_cards
            -^attempts <num>
            -^phase remove
			^max-attempts <num>)
(<clue>     ^stripped <asdf>)
-->
(<s> ^phase query_clue)}

